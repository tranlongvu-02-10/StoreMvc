<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebTH</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        html, body {
        height: 100%;
        display: flex;
        flex-direction: column;
        background-color: #f8f9fa; /* Làm sáng nền tổng thể */
        }

        .container {
        flex: 1;
        }

        /* Header */
        header {
            background: linear-gradient(90deg, #9ACBD0, #48A6A7);
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        /* Navbar */
        nav a.nav-link {
        color: #fff;
        font-weight: bold;
        transition: color 0.3s ease;
        }

        nav a.nav-link:hover {
        color: #48A6A7;
        transform: scale(1.1);
        }

        /* Dropdown */
        .dropdown-menu {
        background-color: #444;
        border-radius: 8px;
        }

        .dropdown-menu a {
        color: #48A6A7;
        transition: background 0.3s ease;
        }

        .dropdown-menu a:hover {
        background-color: #48A6A7;
        color: #222;
        }

        /* Card sản phẩm */
        .card {
        background-color: #ffffff;
        color: #333;
        border: 1px solid #ddd;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px;
        }

        .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .card-title {
        color: #006A71;
        font-weight: bold;
        }

        /* Giá sản phẩm */
        .card .d-flex span {
        font-weight: bold;
        color: #555;
        }

        .card .d-flex p {
        font-size: 1.2rem;
        color: #e60023;
        font-weight: bold;
        }

        /* Nút bấm */
        .btn-outline-dark {
        border-color: #006A71;
        color: #006A71;
        font-weight: bold;
        }

        .btn-outline-dark:hover {
        background-color: #006A71;
        color: white;
        }

        /* Footer */
        footer {
        background-color: #222;
        color: #48A6A7;
        padding: 15px 0;
        text-align: center;
        }

        footer a {
        color: #48A6A7;
        text-decoration: none;
        }

        footer a:hover {
        color: #006A71;
        text-decoration: underline;
        transition: 0.3s ease;
        }

        /* Gợi ý sản phẩm */
        .suggestion-box {
        position: absolute;
        background: white;
        border: 1px solid #ddd;
        max-height: 250px;
        overflow-y: auto;
        z-index: 1000;
        display: none;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .suggestion-item {
        display: flex;
        align-items: center;
        padding: 10px;
        cursor: pointer;
        transition: background 0.2s;
        }

        .suggestion-item:hover {
        background: #f5f5f5;
        }

        .suggestion-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        margin-right: 10px;
        border-radius: 5px;
        }

        .suggestion-name {
        opacity: 1 !important;
        visibility: visible !important;
        font-size: 14px;
        font-weight: bold;
        color: #000;
        margin: 0;
        }

        .suggestion-price {
        font-size: 12px;
            color: #48A6A7;
        margin: 0;
        }

        /* Carousel */
        #carouselExampleSlidesOnly {
        width: 100vw;
        max-width: 100%;
        }

        .carousel-inner .carousel-item img {
        width: 100vw;
        height: auto;
        object-fit: cover;
        }

    </style>

</head>

<body>
    <header class="py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <a asp-controller="Home" asp-action="Index" asp-area="">
                <img src="~/images/logo SGS.png" alt="SGS Logo" class="" width="80">
            </a>
            <div>
                <h1 class="h4 mb-1">SGS Bags</h1>
                <p class="mb-0">Backpacks - Bags - Items</p>
            </div>
            <form class="d-flex w-50" method="get" action="@Url.Action("Index", "Home")">
                <select class="form-select me-2" name="categoryId" style="max-width: 150px;" onchange="this.form.submit()">
                    <option value="">Tất cả danh mục</option>
                    @foreach (var category in ViewBag.Categories ?? Enumerable.Empty<WebLyThuyet.Models.Category>())
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <input class="form-control me-2" id="searchInput" type="text" name="searchTerm" placeholder="Bạn cần tìm sản phẩm...">
                <button class="btn btn-warning" type="submit">
                    <img src="~/LVComputer/search.png" alt="Search" width="20">
                </button>
            </form>
            <div style="display: flex; align-items: center">
                <a class="text-decoration-none text-dark">
                    @await Component.InvokeAsync("CartSummary")
                    Giỏ hàng
                </a>
            </div>
        </div>
    </header>

    <div>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #222;">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Liên hệ</a>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>

        @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
          ViewContext.RouteData.Values["action"]?.ToString() == "Index")
        {
            <div class="container-fluid px-0">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://theme.hstatic.net/200000315505/1001092992/14/banner_top_img.png?v=644" class="d-block w-100" alt="...">
                        </div>
                    </div>
                </div>
            </div>
        }
        
    </div>

    <div class="container mt-5 pt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white text-center text-muted py-3 mt-5 border-top">
        <div class="container">
            &copy; 2025 - SGS STORE |
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-primary">Chính sách bảo mật</a>
        </div>
    </footer>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/search.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
