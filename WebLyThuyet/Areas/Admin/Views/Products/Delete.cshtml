@model WebLyThuyet.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Xác nhận xóa sản phẩm</h4>
                </div>
                <div class="card-body text-center">
                    <p class="fs-5 text-dark">Bạn có chắc chắn muốn xóa <strong>@Model.Name</strong>?</p>

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded shadow mt-3" style="max-width: 200px;" />
                    }

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Xóa ngay
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
