@model IEnumerable<WebLyThuyet.Models.Category>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container mt-4">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h2 class="text-primary">Danh mục sản phẩm</h2>
		<a asp-action="Add" class="btn btn-success">
			<i class="bi bi-plus-circle"></i> Thêm danh mục
		</a>
	</div>

	<div class="card shadow-lg">
		<div class="card-body">
			<table class="table table-striped table-hover">
				<thead class="table-dark">
					<tr>
						<th class="text-center">Tên danh mục</th>
						<th class="text-center">Hành động</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var category in Model)
					{
						<tr>
							<td class="align-middle text-center">@category.Name</td>
							<td class="align-middle text-center">
								<a asp-action="Display" asp-route-id="@category.Id" class="btn btn-info btn-sm">
									<i class="bi bi-eye"></i> Xem
								</a>
								<a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">
									<i class="bi bi-pencil"></i> Sửa
								</a>
								<a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">
									<i class="bi bi-trash"></i> Xóa
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
